{
  "name": "@api/source",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build-images:staging": "nx affected -t container -c staging --parallel=2 --skip-nx-cache --build-args=VERSION=$CI_TAG",
    "build-images:production": "nx run-many -t container -c production --parallel=2 --skip-nx-cache --build-args=VERSION=$CI_TAG",
    "prepare": "husky",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor -s",
    "release:patch": "standard-version --release-as patch -s",
    "release:major": "standard-version --release-as major -s"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.2",
    "@nestjs/core": "^10.0.2",
    "@nestjs/platform-express": "^10.0.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@eslint/js": "^9.8.0",
    "@jest/globals": "^29.7.0",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.2",
    "@nx-tools/nx-container": "^6.2.0",
    "@nx/devkit": "20.8.1",
    "@nx/eslint": "20.8.1",
    "@nx/eslint-plugin": "20.8.1",
    "@nx/jest": "20.8.1",
    "@nx/js": "20.8.1",
    "@nx/nest": "20.8.1",
    "@nx/node": "20.8.1",
    "@nx/web": "20.8.1",
    "@nx/webpack": "20.8.1",
    "@nx/workspace": "20.8.1",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@swc/types": "^0.1.21",
    "@types/jest": "^29.5.12",
    "@types/node": "~18.16.9",
    "@typescript-eslint/parser": "^8.32.0",
    "axios": "^1.9.0",
    "commitizen": "^4.3.1",
    "cz-customizable": "^7.4.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "lint-staged": "^15.5.2",
    "nx": "20.8.1",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prisma": "^6.7.0",
    "standard-version": "^9.5.0",
    "supertest": "^7.1.0",
    "swc-loader": "^0.2.6",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.3.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.19.0",
    "webpack": "^5.99.8",
    "webpack-cli": "^5.1.4"
  },
  "packageManager": "yarn@4.9.1",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "config/git/commitizen.js"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g './config/git/commitlint.js'"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "nx run-many --target=lint --all=true"
    ]
  }
}
